{
    "compilerOptions": {
        "target": "ES2020",
        "useDefineForClassFields": true,
        "module": "ESNext",
        "skipLibCheck": true,
        "allowJs": true,

        /* Bundler mode */
        "moduleResolution": "bundler",
        "declaration": true,
        "emitDeclarationOnly": true,
        "noEmit": false,
        "downlevelIteration": false,
        "outDir": "./dist",

        /* Linting */
        "strict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noFallthroughCasesInSwitch": true
    },
    "include": ["src/utils/index.ts"]
}
